{% extends 'base.html.twig' %} {% block title %}Welcome to Vienna Events{% endblock %} {% block body %}

<div class="container">
    <h1> Event Details</h1>

    <div>
        <div class="card text-center" style="width: 100%;">
            <img src="{{event.image}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{event.name}}</h5>
                <h5 class="card-title">{{event.datetime|date("F j, Y, g:i a")}}</h5>
                <p class="card-text">{{event.description}}</p>
                <p class="card-text">Capacity:{{event.capacity}}</p>
                <p class="card-text">Contact e-mail:{{event.contactEmail}}</p>
                <p class="card-text">Contact Phone No.:{{event.contactphonenumber}}</p>
                <p class="card-text">Address:{{event.address}}</p>
                <p class="card-text">Event_url:{{event.eventsurl}}</p>
                <p class="card-text">{{event.eventsType}}</p>
            </div>
        </div>
        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
</div>
{% endblock %}