{% extends 'base.html.twig' %} {% block title %}Welcome to Vienna Events{% endblock %} {% block body %}

<div class="container">
    <h1 class="text text-center text-danger">Vienna Events</h1>

    <div class="row row-cols-3">
        {% for event in events %}
        <div>
            <div class="card" style="width: 18rem;">
                <img src="{{event.image}}" class="card-img-top" style="height: 11rem" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{event.name}}</h5>
                    <p class="card-text">{{event.dateTime|date("F j, Y, g:i a")}}</p>
                    <p class="card-text">{{event.description}}</p>
                    <a href="/details/{{event.id}}" class="btn btn-primary">Details</a>
                    <a href="/edit/{{event.id}}" class="btn btn-warning">Update</a>
                    <a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}